@using HiddenVilla_Server.Model

<div class="bg-light border p-2 col-5 offset-1" @onclick="(args)=> OnAminitySelected(args, Amenities.Name)">
    <h4 class="text-secondary">Amenities - @Amenities.Id</h4>
    @Amenities.Name<br />
    @Amenities.Description<br />
    <span>RF from Parent - @Parent1 @Parent2</span>
</div>

@code{
    [Parameter]
    public BlazorAmenities Amenities { get; set; }

    [Parameter]
    public EventCallback<string> OnSelectedAminiy { get; set; }

    [Parameter]
    public RenderFragment Parent1 { get; set; }

    [Parameter]
    public RenderFragment Parent2 { get; set; }

    protected async Task OnAminitySelected(MouseEventArgs e, string name)
    {
        await OnSelectedAminiy.InvokeAsync((string)name);
    }
}
